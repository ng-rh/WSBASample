<project name="WSBASample" default="all" >

  <target name="all" depends="init, clean, compile, makeWSBASampleEJBJar"/>

  <target name="init">
    <tstamp/>
    <echo message="WSBASample Top Down EJB Build Started..."/>
    <mkdir dir="bld/WSBASample/WSBASampleEJB/META-INF"/>

    <copy todir="bld/WSBASample/WSBASampleEJB">
      <fileset dir="${basedir}/src/WSBASampleEJB" includes="META-INF/**"/>
      <fileset dir="${basedir}/src/WSBASampleEJB" includes="com/**/*.java"/>
      <fileset dir="${basedir}/src/common" includes="com/**/*.java"/>
    </copy>
  </target>

  <target name="clean">
    <tstamp/>
    <echo message="WSBASample Top Down EJB Cleaning..."/>
    <delete file="installableApps/WSBASampleEJB.jar"/>
  </target>

  <target name="emit" depends="init">
    <tstamp/>

      <echo message="WSBASample Top Down EJB Emiting deployment files..."/>

  </target>

  <target name="compile" depends="emit">
    <tstamp/>
    <echo message="WSBASample WSBASample Top Down EJB Compiling..."/>
    <echo message="WSBASample WSBASample deleting BusinessException generated by wsimport"/>
    <delete file="bld/WSBASample/WSBASampleEJB/com/ibm/ws/wsba/utils/BusinessException.class"/>

    <javac srcdir="bld/WSBASample/WSBASampleEJB" 
           destdir="bld/WSBASample/WSBASampleEJB" 
           deprecation="true" 
           debug="on"
           classpath="${prereq.classpath}">
     </javac>
  </target>

  <target name="makeWSBASampleEJBJar" depends="emit">
    <tstamp/>
    <echo message="Creating the WSBASample Top Down EJB jar..."/>
    <mkdir dir="installableApps"/>
    <jar jarfile="installableApps/WSBASampleEJB.jar">
       <fileset dir="bld/WSBASample/WSBASampleEJB" includes="com/**/*.class"/>
       <!-- Package java code for WebSphere Studio importation. -->
       <fileset dir="bld/WSBASample/WSBASampleEJB" includes="com/**/*.java"/>
       <zipfileset dir="bld/WSBASample/WSBASampleEJB/META-INF" prefix="META-INF"/>
    </jar>
  </target>

</project>
